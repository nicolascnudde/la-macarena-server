datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Activity {
  id          Int       @id @default(autoincrement())
  title       String    @unique @default("")
  description String    @default("")
  image       Json?
  price       Int
  slots       Int
  category    Category? @relation("Activity_category", fields: [categoryId], references: [id])
  categoryId  Int?      @map("category")
  date        DateTime?
  toDate      DateTime?
  wysiwyg     Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")

  @@index([categoryId])
}

model Category {
  id                     Int        @id @default(autoincrement())
  title                  String     @unique @default("")
  description            String     @default("")
  image                  Json?
  from_Activity_category Activity[] @relation("Activity_category")
}

