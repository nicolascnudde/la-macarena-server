datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Activity {
  id              String    @id @default(uuid()) @postgresql.Uuid
  title           String    @unique @default("")
  description     String    @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_mode      String?
  image_id        String?
  price           Int
  category        Category? @relation("Activity_category", fields: [categoryId], references: [id])
  categoryId      String?   @map("category") @postgresql.Uuid
  multipleDays    Boolean   @default(false)
  date            DateTime?
  fromDate        DateTime?
  toDate          DateTime?

  @@index([categoryId])
}

model Category {
  id                     String     @id @default(uuid()) @postgresql.Uuid
  title                  String     @unique @default("")
  description            String     @default("")
  image_filesize         Int?
  image_extension        String?
  image_width            Int?
  image_height           Int?
  image_mode             String?
  image_id               String?
  from_Activity_category Activity[] @relation("Activity_category")
}

model Member {
  id              String  @id @default(uuid()) @postgresql.Uuid
  firstName       String  @default("")
  lastName        String  @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_mode      String?
  image_id        String?
  origin          String  @default("")
}

model User {
  id       String @id @default(uuid()) @postgresql.Uuid
  name     String @default("")
  email    String @unique @default("")
  password String
}