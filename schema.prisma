datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Activity {
  id            String    @id @default(uuid()) @postgresql.Uuid
  title         String    @unique @default("")
  description   String    @default("")
  image         Json?
  price         Int
  numberOfSlots Int
  category      Category? @relation("Activity_category", fields: [categoryId], references: [id])
  categoryId    String?   @map("category") @postgresql.Uuid
  multipleDays  Boolean   @default(false)
  date          DateTime?
  fromDate      DateTime?
  toDate        DateTime?

  @@index([categoryId])
}

model Content {
  id                                  String @id @default(uuid()) @postgresql.Uuid
  homePageHeroTitle                   String @unique @default("")
  homePageHeroDescription             String @default("")
  homePageHeroImage                   Json?
  homePageAboutTitle                  String @default("")
  homePageAboutDescription            String @default("")
  activitiesPageHeroTitle             String @unique @default("")
  activitiesPageHeroDescription       String @default("")
  activitiesPageUpcomingDescription   String @default("")
  activitiesPageCategoriesDescription String @default("")
  aboutPageHeroTitle                  String @unique @default("")
  aboutPageHeroDescription            String @default("")
  aboutPageHeroImage                  Json?
  aboutPageStoryTitle                 String @default("")
  aboutPageStoryDescription           String @default("")
  goalsPageHeroTitle                  String @unique @default("")
  goalsPageHeroDescription            String @default("")
  contactPageHeroTitle                String @unique @default("")
  contactPageHeroDescription          String @default("")
  whoWeAreTitle                       String @default("")
  whoWeAreDescription                 String @default("")
  ctaTitle                            String @default("")
  ctaDescription                      String @default("")
  ctaImage                            Json?
}

model FAQ {
  id       String @id @default(uuid()) @postgresql.Uuid
  question String @unique @default("")
  answer   String @default("")
}

model Category {
  id                     String     @id @default(uuid()) @postgresql.Uuid
  title                  String     @unique @default("")
  description            String     @default("")
  image                  Json?
  from_Activity_category Activity[] @relation("Activity_category")
}

model Member {
  id        String    @id @default(uuid()) @postgresql.Uuid
  firstName String    @default("")
  lastName  String    @default("")
  image     Json?
  birthday  DateTime?
  origin    String    @default("")
}

model User {
  id       String @id @default(uuid()) @postgresql.Uuid
  name     String @default("")
  email    String @unique @default("")
  password String
}